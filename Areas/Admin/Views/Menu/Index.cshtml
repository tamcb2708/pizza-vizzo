@model PagedList.IPagedList<webMVC1.EF.Menu>
@using PagedList.Mvc;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">


    <div class="col-md-8">


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-header">
                        Local Menu

                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Index", "Menu", FormMethod.Get))
                        {
                            <div class="row form-group">
                                <div class="col-lg-12">
                                    <div class="col-md-4">
                                        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" />
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-success">Search</button>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <a href="/Admin/Menu/Create" class="btn btn-danger">Add Menu</a>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>

                                        <th>Text</th>
                                        <th>Link</th>
                                        <th>DisPlayOrder</th>
                                        <th>Target</th>
                                        <th>Status</th>
                                        <th>Local Menu</th>
                                        <th>Optional</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ID">
                                            <td>@item.Text</td>
                                            <td>@item.Link</td>
                                            <td>@item.DisPlayOrder</td>
                                            <td>@item.Target</td>
                                            <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Actived" : "Key")</a></td>
                                            <td>@item.TypeID</td>
                                            <td>
                                                <a class="btn btn-warning" href="/Admin/Menu/Edit/@item.ID">Edit</a>
                                                @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                                           {
                                               Confirm = "Are You Sure ?",
                                               OnComplete = "$('#row_" + @item.ID + "').remove()",
                                               HttpMethod = "Delete"

                                           })

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.SearchString }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="col-md-4">
        @{ 
            Html.RenderAction("Index", "MenuDetail");
        }
    </div>
</div>
