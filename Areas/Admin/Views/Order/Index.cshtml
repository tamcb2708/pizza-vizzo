@model PagedList.IPagedList<webMVC1.EF.Order>
@using PagedList.Mvc;
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-header">
                List Order

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Order", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Search</button>

                            </div>


                        </div>

                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>CusTomerID</th>
                                <th>ShipName</th>
                                <th>ShipMobile</th>
                                <th>ShipAddress</th>
                                <th>ShipEmail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td width="10%">@item.ID</td>
                                    <td width="30%">@item.CreateDate</td>
                                    <td width="5%">@item.CustomerID</td>
                                    <td width="5%">@item.ShipName</td>
                                    <td width="5%">@item.ShipMoblie</td>
                                    <td width="5%">@item.ShipAddress</td>
                                    <td width="15%">@item.ShipEmail</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>

        </div>
    </div>

</div>

