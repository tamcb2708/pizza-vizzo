@model IEnumerable<webMVC1.EF.CategoryDetail>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-header">
                List CategoryDetail
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "CategoryDetail", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">

                        </div>
                    </div>
                    <div class="container">
                        <a href="/Admin/CategoryDetail/Create" class="btn btn-danger">Add Categorys</a>
                    </div>

                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>MetaTitle</th>
                                <th>DetailID</th>
                                <th>CreateBy</th>
                                <th>CreteDate</th>
                                <th>Status</th>
                                <th>DesCription</th>
                                <th>Question</th>
                                <th>Answer</th>
                                <th>Images</th>
                                <th>Optional</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td><p>@item.Name</p></td>
                                    <td><p>@item.MetaTitle</p></td>
                                    <td><p>@item.DetailID</p></td>
                                    <td><p>@item.CreateBy</p></td>
                                    <td><p>@item.CreateDate</p></td>
                                    <td><p>@item.Status</p></td>
                                    <td><p style="width:400px">@item.DesCription</p></td>
                                    <th><p>@item.Question</p></th>
                                    <th><p>@item.answer</p></th>
                                    <th><img src="/Content/Image/@item.Images" width="100" /></th>
                                    <td>
                                        <a class="btn btn-warning" href="/Admin/Category/Edit/@item.ID">Edit</a>
                                        |
                                        @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Are You Sure ?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"

                                   })

                                    </td>

                                </tr>
                            }

                        </tbody>

                    </table>

                </div>
            </div>

        </div>
    </div>

</div>

