@{

    Layout = "~/Views/Shared/_TLayout.cshtml";
    var listfooter = (List<webMVC1.EF.Product>)ViewBag.footer;
}


<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>Gallery</h2>
                    <ul>
                        <li>
                            <a href="index">Home</a>
                        </li>
                        <li>Gallery</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Banner -->
<!-- Start Gallery Area -->
<section class="gallery-area pt-100 pb-70">
    <div class="container">
        <div class="row">
            @foreach (var item in listfooter)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-gallery-item">
                        <img src="/Content/Image/@item.Images" alt="image">

                        <div class="gallery-content">
                            <span>@item.Name</span>
                            <h3>@item.MetaTitle</h3>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- End Gallery Area -->
