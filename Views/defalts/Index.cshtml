
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TLayout.cshtml";
    var pizza = (List<webMVC1.EF.Product>)ViewBag.pizza;
    var popularMenu = (List<webMVC1.EF.Product>)ViewBag.popularMenu;
    var listfooter = (List<webMVC1.EF.Product>)ViewBag.footer;
    var listfooterT = (List<webMVC1.EF.Product>)ViewBag.footerT;
    var Ourchef = (List<webMVC1.EF.OurChefs>)ViewBag.ourchef;
}


<!-- Start Main Banner Area -->
<div class="main-banner">
    <div class="main-banner-item item-two">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="main-banner-content">
                                <h1>It’s About Good Food & Fresh Ingredients</h1>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod  incididunt labore  dolore magna aliqua.</p>
                                <div class="banner-btn">
                                    <a href="menu" class="default-btn">
                                        View Our Menu
                                    </a>
                                    <a href="gio-hang" class="default-btn-two">
                                        Cart
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="banner-image">
                                <img src="/Content/User/assets/img/banner-image.png" alt="image">

                                <div class="offer-text">
                                    <h4>50%</h4>
                                    <span>Off</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Main Banner Area -->
<!-- Start Chef Area -->
<section class="chef-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="chef-item">
                    <h3>Try Out Our New Menu From Chef Master </h3>
                    <p>Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. ipsume ultrices gravida. Risus commodo viverra maecenas accumsan lacus vel facilisis. Lorem Ipsum is simply dummy printing and typesetting industry. Lorem Ipsum has been the industry standard dummytext ever since the when an unknown printer took a galley of type.</p>

                    <ul class="chef-list">
                        <li>
                            <i class="las la-hamburger"></i>
                            <span>Vegan Burger</span>
                        </li>
                        <li>
                            <i class="las la-ice-cream"></i>
                            <span>Drumstick</span>
                        </li>
                        <li>
                            <i class="las la-drumstick-bite"></i>
                            <span>Chicken Shawarma</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="chef-image">
                    <img src="/Content/User/assets/img/chef.png" alt="image">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Chef Area -->
<!-- Start Pizza Area -->
<section class="pizza-area pb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="pizza-image">
                    <img src="/Content/User/assets/img/pizza/main-pizza.png" alt="image">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="pizza-item">
                    <h3>Pizza</h3>
                    @foreach (var item in pizza)
                    {


                    <div class="pizza-list">
                        <div class="image">
                            <img src="/Content/Image/@item.Images" alt="image">
                        </div>
                        <h4>
                            <a href="/them-gio-hang?productID=@item.ID&quantity=1">@item.Name</a>
                            <span class="price">$@item.Price</span>
                        </h4>
                        <p>@item.DesCription</p>
                    </div>
                    }


                </div>
            </div>
        </div>
    </div>


</section>
<!-- End Pizza Area -->
<!-- Start Menu Area -->
<section class="menu-area pb-100">
    <div class="container">
        <div class="section-title">
            <h2>Popular Menu</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="menu-item">
                    @foreach (var item in popularMenu)
                    {


                    <div class="menu-list">
                        <div class="image">
                            <img src="/Content/Image/@item.Images" alt="image">
                        </div>
                        <h4>
                            <a href="/them-gio-hang?productID=@item.ID&quantity=1">@item.Name</a>
                            <span class="price">$@item.Price</span>
                        </h4>
                        <p>@item.DesCription</p>
                    </div>
                    }

                </div>
            </div>

          
        </div>
    </div>
</section>
<!-- End Menu Area -->
<!-- Start Team Area -->
<section class="team-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h2>Our Chefs</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="row">
            @foreach (var item in Ourchef)
            {


            <div class="col-lg-4 col-md-6">
                <div class="team-item">
                    <div class="image">
                        <img src="/Content/OurChef/@item.Image" alt="image">
                    </div>
                    <div class="content">
                        <h3>@item.Name</h3>
                        <span>@item.office</span>

                        <ul class="social">
                            <li>
                                <a href="@item.LinkFb" target="_blank">
                                    <i class="lab la-facebook-f"></i>
                                </a>
                            </li>
                            <li>
                                <a href="@item.LinkSwithter" target="_blank">
                                    <i class="lab la-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="@item.LinkInstagam" target="_blank">
                                    <i class="lab la-linkedin-in"></i>
                                </a>
                            </li>
                            <li>
                                <a href="@item.LinkInstagam" target="_blank">
                                    <i class="lab la-instagram"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</section>
<!-- End Team Area -->
<!-- Start Dishes Area -->
<section class="dishes-area pt-100 pb-70">
    <div class="container-fluid p-0">
        <div class="section-title">
            <h2>Popular Dishes</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="row">
            @foreach (var item in listfooter)
            {
            <div class="col-lg-3 col-sm-6">
                <div class="dishes-item">
                    <div class="image">
                        <a href="/them-gio-hang?productID=@item.ID&quantity=1">
                            <img src="/Content/Image/@item.Images" alt="image">
                        </a>
                    </div>

                    <div class="content">
                        <h3>
                            <a href="/them-gio-hang?productID=@item.ID&quantity=1">@item.Name</a>
                        </h3>
                        <span>@item.MetaTitle</span>

                        <div class="dishes-btn">
                            <a href="/them-gio-hang?productID=@item.ID&quantity=1" class="default-btn">Add To Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            }


        </div>
    </div>
</section>
<!-- End Dishes Area -->
<!-- Start Video Area -->
<div class="video-area">
    <div class="container">
        <div class="video-content">
            <a href="https://www.youtube.com/watch?v=qaHWDmFtBl0" class="video-btn popup-youtube">
                <i class="las la-play"></i>
            </a>
        </div>
    </div>
</div>
<!-- End Video Area -->
<!-- Start Blog Area -->
<section class="blog-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h2>Our Latest News</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="blog-slider owl-carousel owl-theme">
            @foreach(var item in listfooterT)
            {

            <div class="blog-item">
                <div class="image">
                    <a href="/them-gio-hang?productID=@item.ID&quantity=1">
                        <img src="/Content/Image/@item.Images" alt="image">
                    </a>
                    <div class="date">
                        <span>@item.CreateDate</span>
                    </div>
                </div>
                <div class="content">
                    <h3>
                        <a href="/them-gio-hang?productID=@item.ID&quantity=1">
                            @item.MetaDescriptions
                        </a>
                    </h3>
                    <a href="chi-tiet/@item.ID" class="blog-btn">Remore++</a>
                </div>
            </div>
            }
           
        </div>
    </div>
</section>
<!-- End Blog Area -->
