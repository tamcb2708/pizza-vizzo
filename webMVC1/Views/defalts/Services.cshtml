@{

    Layout = "~/Views/Shared/_TLayout.cshtml";
    var listfooter = (List<webMVC1.EF.Product>)ViewBag.footer;
    var anser = (List<webMVC1.EF.CategoryDetail>)ViewBag.an;
}


<!-- Start Page Banner -->
<div class="page-title-area">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-title-content">
                    <h2>Services</h2>
                    <ul>
                        <li>
                            <a href="index">Home</a>
                        </li>
                        <li>Services</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Banner -->
<!-- Start Services Area -->
<section class="services-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h2>What We Can Do For You</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="row">
            @foreach (var item in anser)
            {
            <div class="col-lg-4 col-md-6">
                <div class="services-item">
                    <div class="icon">
                        <i class="las la-apple-alt"></i>
                    </div>
                    <h3>@item.Name</h3>
                    <p>@item.answer</p>
                </div>
            </div>
            }

        </div>
    </div>
</section>
<!-- Start Services Area -->
<!-- Start Yummy Area -->
<section class="yummy-area ptb-100">
    <div class="container">
        <div class="yummy-content">
            <h3>Mouth-Watering Pizza</h3>
            <h4>$19.99</h4>

            <div class="yummy-btn">
                <a href="cart" class="default-btn">Add To Cart</a>
            </div>
        </div>
    </div>
</section>
<!-- End Yummy Area -->
<!-- Start Dishes Area -->
<section class="dishes-area pt-100 pb-70">
    <div class="container-fluid p-0">
        <div class="section-title">
            <h2>Popular Dishes</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="row">
            @foreach (var item in listfooter)
            {
            <div class="col-lg-3 col-sm-6">
                <div class="dishes-item">
                    <div class="image">
                        <a href="#">
                            <img src="/Content/User/assets/img/dishes/@item.Images" alt="image">
                        </a>
                    </div>

                    <div class="content">
                        <h3>
                            <a href="#">@item.Name</a>
                        </h3>
                        <span>@item.MetaTitle</span>

                        <div class="dishes-btn">
                            <a href="cart" class="default-btn">Add To Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</section>
<!-- End Dishes Area -->
