@model IEnumerable< webMVC1.EF.Contact >
@{ 
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-header">
                    Danh sach Contact

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Contact</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">


                                        <td>@item.content</td>

                                     
                                        <td><a href="#" class="btn-active" data-id="@item.ID">@(item.status? "kich hoat":"khoa")</a></td>
                                        <td>
                                            <a href="/Admin/Contact/Edit/@item.ID">Sua</a>
                                            |
                                            @Ajax.ActionLink("Xoa", "Delete", new { @id = item.ID }, new AjaxOptions
                                       {
                                           Confirm = "ban co chac chan muon xoa khong?",
                                           OnComplete = "$('#row_" + @item.ID + "').remove()",
                                           HttpMethod = "Delete"

                                       })

                                        </td>

                                    </tr>
                                }

                            </tbody>

                        </table>
            
                    </div>
                </div>

            </div>
        </div>

    </div>

